
<div class="wrapper home has-navigation has-footer">
	<div class="content" style="padding-left: 150px;">
		<h2>Users</h2>
		<table>
			<tr>
				<th>Username</th>
				<th>Email</th>
				<th>Kites</th>
				<th>Comments</th>
				<th>Account Created</th>
				<th>Times Logged In</th>
				<th>Last Login</th>
			</tr>
			<% @users.each do |user| %>
			  <tr>
			    <td><%= user.username %></td>
			    <td><%= user.email %></td>
			    <td><%= user.KiteCount %></td>
			    <td><%= user.CommentCount %></td>
			    <td><%= user.FormattedCreateDate %></td>
			    <td><%= user.sign_in_count %></td>
			    <td><%= user.FormattedLastLoginDate %></td>
			    <td><%= link_to 'Reset Password', ForcePasswordReset_user_path(user), :confirm => 'Are you sure you want to reset this user password', :method => :put%></td>
			    <td><%= link_to 'Delete', user, :confirm => 'Are you sure you want to delete this user?', :method => :delete%></td>
			    <td><%= button_to 'Get User Kites', GetKites_user_path(user), remote: true %></td>
			  </tr>
			<% end %>
		</table>
		<h2>Kites</h2>
		<table>
			<tr>
				<th>Kite Owner</th>
				<th>Description</th>
				<th>Created</th>
				<th>Shared</th>
				<th>Likes</th>
				<th>Comments</th>
				<th>Followings</th>
			</tr>
			<tbody id="kites"></tbody>
		</table>
	</div>
</div>
