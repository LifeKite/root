<div id="kite-nav" class="kite-nav hidden">
	<div class="kite-nav-tab">
		<div id="info" class="kite-nav-button info active">
			<div class="active-flag"></div>
		</div>
		<div id="support" class="kite-nav-button heart">
			<div class="active-flag"></div>
		</div>
		<div id="comments" class="kite-nav-button comments">
			<div class="active-flag"></div>
		</div>
		<div id="members" class="kite-nav-button members">
			<div class="active-flag"></div>
		</div>
		<div id="settings" class="kite-nav-button settings">
			<div class="active-flag"></div>
		</div>
		<div class="kite-nav-toggle show">
			<div class="active-flag"></div>
		</div>
		<div class="kite-nav-toggle hide">
			<div class="active-flag"></div>
		</div>
	</div>
	<div class="kite-nav-content">
		<div class="kite-nav-header">
			<h1 class="detail-kite-title"><%=@kite.Description%></h1>
			<p class="dateline">Created <%=@kite.FormattedCreateDate%></p>
		</div>
		<div class="detail-section info">
			<div class="kite-nav-content-section">
				<h3>Overview</h3>
				<%= content_tag(:p, @kite.Details)%>
			</div>
			<div class="kite-nav-content-section">
				<h3>Progress</h3>
			</div>
			<div id="postlist" class="additional-images">
				<%= render partial: "kite_posts/kite_post", collection: @kitePosts %>
			</div>
			<%= will_paginate @kitePosts, :remote => true %>
			<% if current_user %>
				<%= render 'kite_posts/form'%>
			<% end %>
			<% if !@kite.ImageLocation.nil? && valid_json?(@kite.ImageLocation) %>
				<p class="dateline">Image original source: <a hef='<%= JSON.parse(@kite.ImageLocation)['site'] %>'>
					<%= JSON.parse(@kite.ImageLocation)['site'] %>
				</a></p>
			<% end %>
		</div>
		<div class="detail-section support" style="display:none;">
			<h2>Support</h2>
			<ul id="likelist" class="members-list user-list" >
				<%= render @kite.follwings.where(:Type => "like")%>
			</ul>
			<% if current_user %>
				<%= render 'follwings/follow', :title => "Support this kite", :type => "like"%>
				
			<% end %>
		</div>
		<div class="detail-section comments" style="display:none;">
			<h2>Comments</h2>
			<div id="commentslist">
				<%= render @comments %>
			</div>
			<%= link_to 'Load More Comments', kite_path(@kite, :page => @comments.next_page), :class => 'load-more', :remote => true if @comments.next_page %>
			
			<% if current_user %>
				<%= render 'comments/form'%>
			<% end %>
		</div>
		<div class="detail-section members" style="display:none;">
			<h2>Members</h2>
			<ul id="memberslist" class="members-list user-list">
				<%= render @kite.follwings.where(:Type => "member")%>
			</ul>
			<% if current_user %>
				<%= render 'follwings/follow', :title => "Follow this kite", :type => "member"%>
				
			<% end %>
		</div>
		<% if current_user %>
			<div class="detail-section settings" style="display: none;">
				<!--<%= button_to "Post Kite to Facebook", action: "ShareKiteToSocialMedia" %>-->
				<%= link_to 'Edit this kite', edit_kite_path(@kite) %>
				<%= link_to 'Delete this kite', @kite, :confirm => 'Are you sure you want to delete this kite?', :method => :delete, :class => "delete-this-kite"%>
			</div>
		<% end %>
	</div>
</div>