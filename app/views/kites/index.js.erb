<% if current_user %>
  <%= render 'scroll', kites_container: '.my-kitescontainer', size: :thumb, kites: @my_kites %>
  <%= render 'scroll', kites_container: '#tied-kitescontainer', size: :mini, kites: @tied_kites %>
  <%= render 'scroll', kites_container: '#all-kitescontainer', size: :mini, kites: @kites %>
<% else %>
  <%= render 'scroll', kites_container: '.kitescontainer', size: :thumb, kites: @kites %>
<% end %>
