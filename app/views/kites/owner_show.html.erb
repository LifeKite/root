<p id="notice"><%= notice %></p>
<div class="row-fluid">
	<div class="kite span6">
		<%= image_tag(@kite.ImageLocation, :alt=>@kite.Description, :mouseover=>@kite.Description, :id=>'thumbnail') %>
	</div>
	<div class="span6">
		<div class="row">
		<div class="span12 well">
			<p>
				<b>Created:</b>
				  <%= @kite.CreateDate %>
				</p>
				
				<% if @kite.Completed? %>
				<p>
				  <b>Completed:</b>
				  <%= @kite.Completed %>
				</p>
				
				<p>
				  <b>Completed On:</b>
				  <%= @kite.CompleteDate %>
				</p>
				<% end %>
			<p>
  		</div>
  		</div>
  		<div class="row">
  			<div class="span12 well">
  				<b>Comments</b>
				<ul>
				  <% for comment in @kite.comments %>
				    <li><%= comment.content %> - <%= comment.user.username %></li>
				  <% end %>
				</ul>
				
				<%= link_to 'Add Comment', new_comment_path(:kite => @kite) %>
  			</div>
  		</div>
  	</div>
  </div>


<% if @kite.user.id == current_user.id %>
<%= link_to 'Edit', edit_kite_path(@kite) %> 
<%= link_to 'Delete', @kite, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
<%= link_to 'Back', @kite.user %>
