<div class="wrapper home has-navigation has-footer <%if current_user %>has-sidebar<%end%>">
	<div class="content">
		<% if current_user %>
			<div class="content-header user">
				<h1><%= @function %></h1>
				<div class="dashed-separator"></div>
			</div>

			<div class="kites">
				<div class="main-kites">
					<h2>My Kites</h2>
					<div class="dashed-separator wide-10"></div>
					<div class="my-kitescontainer">
						<%= render @my_kites, size: :thumb %>
						<div class="hidden">
							<%= will_paginate @my_kites %>
						</div>
					</div>
          <div class="kite fake-kite">
            <%= link_to 'Click here to add a kite', new_kite_path %>
          </div>
				</div>

				<div class="side-kites">
          <ul class="side-nav">
            <li><a class="h3-like" href="#all-kitescontainer">All Kites</a></li>
            <li class="tab-last"><a class="h3-like" href="#tied-kitescontainer">Kites I'm Tied To</a></li>
          </ul>
					<div class="dashed-separator light wide-90"></div>
					<div id="all-kitescontainer">
						<%= render @kites, size: :mini %>
						<div class="hidden">
							<%= will_paginate @kites %>
						</div>
					</div>
					<div id="tied-kitescontainer">
						<%= render @tied_kites, size: :mini %>
						<div class="hidden">
							<%= will_paginate @tied_kites %>
						</div>
					</div>
				</div>
			</div>

		<% else %>
			<div class="content-header welcome">
				<h1 class="page-title">Welcome to <span class="red">LifeKite</span></h1>
				<div class="dashed-separator"></div>
				<h3><span class="bold">What is LifeKite?</span> Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque eget nisl quam. </h3>
				<h3>Vestibulum et risus interdum risus tincidunt fringilla.</h3>
				<h3 class="red bold italic">Click on any image below to take a peak at what other people are kiting!</h3>
				<h3 class="red bold italic">OR</h3>
				<div class="signup-img">
					<%= link_to image_tag('home-signup-click.png'), new_user_registration_path %>
				</div>
			</div>
			<div class="kitescontainer">
				<!-- Begin kite -->
				<%= render @kites, size: :thumb %>
				<!-- End kite -->
				<div class="hidden">
					<%= will_paginate @kites %>
				</div>
			</div>
		<% end %>
	</div>
</div>
