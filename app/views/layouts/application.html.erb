<!DOCTYPE html>
<html>
<head>
  <title>Rlifekite</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "bootstrap.min.js" %>
  <%= javascript_include_tag "jquery.jcarousel.min.js" %>
  <%= javascript_include_tag "bootstrap-alert.js" %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="container">
  <div id="header">
  	<div id="Logo">
  		<%= image_tag 'LK3.png', { :height => 30, :width => 30, :style => "vertical-align: top;"} %>
  		<h1 style="display: inline;">LifeKite</h1>
  		<br/>Picture your goals
  	</div>
  	
	  
	  	<%if current_user %>
	  		
	  		<div class="btn-group pull-right">
		    
	    	<a class="btn dropdown-toggle" href="#" data-toggle="dropdown">
	    		<i class="icon-user"></i>
	    		<%=h current_user.username %>
	    		<span class="caret"></span>
	    	</a>
	    	<ul class="dropdown-menu">
	    		<li><%= link_to 'Edit my account', edit_user_registration_path %></li>
	    		<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
	    	</ul> 
	    	</div>
	    	<div class = "pull-right">
	    		<%= link_to 'Home', current_user, { :style => "margin-right: 50px;"} %>
	    	</div>
	    <% end %>  
	
	</div>
  <div class="alert alert-success span12" style="display: none;"><%= notice %></div>
  <div class="alert alert-error span12" style="display: none;"><%= alert %></div>
  <div id="body">
		<%= yield %>
  </div>
  <div id="footer">
  	<ul>
  		<li><%= link_to 'About', home_path('about') %></li>
  		<li><%= link_to 'Advertise', home_path('contact') %></li>
  		<li><%= link_to 'Help', home_path('help') %></li>
  	<ul>
  </div>
</div>
</body>
</html>
