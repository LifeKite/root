<!DOCTYPE html>
<html>
<head>
  <title>Rlifekite</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "bootstrap.min.js" %>
  <%= javascript_include_tag "jquery.jcarousel.min.js" %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="container">
  <div id="header">
  	<div id="Logo">
  		<h1>LifeKite</h1><br/>Picture your goals
  	</div>
  	<div id="menu"
	  <ul class="hmenu">
	  	<%if current_user %>
	    <li><%= current_user.username %></li>
	    <li><%= link_to 'Home', current_user %></li>
	    <% end %>
	    <li><%= render 'devise/menu/login_items' %></li>
	    <li><%= link_to 'Edit my account', edit_user_registration_path %></li>
	  </ul>
	  <p style="color: green"><%= notice %></p>
	  <p style="color: red"><%= alert %></p>
	</div>
	</div>
  <div id="body">
		<%= yield %>
  </div>
  <div id="footer">
  	<ul>
  		<li><%= link_to 'About', home_path('about') %></li>
  		<li><%= link_to 'Advertise', home_path('contact') %></li>
  		<li><%= link_to 'Help', home_path('help') %></li>
  	<ul>
  </div>
</div>
</body>
</html>
