<!DOCTYPE html>
<html>
<head>
  <title>Lifekite</title>
  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag "normalize" %>
  <%= stylesheet_link_tag "styles" %>
  <%= stylesheet_link_tag "jquery.jscrollpane" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "bootstrap.min.js" %>
  <%= javascript_include_tag "jquery-ui.js" %>
  <%= javascript_include_tag "jquery.jcarousel.min.js" %>
  <%= javascript_include_tag "bootstrap-alert.js" %>
  <%= javascript_include_tag "jquery.ui.widget.js" %>
  <%= javascript_include_tag "jquery.iframe-transport.js" %>
  <%= javascript_include_tag "jquery.fileupload.js" %>
  
  <link href='http://fonts.googleapis.com/css?family=Sofadi+One' rel='stylesheet' type='text/css'>
  <!-- Google fonts -->
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Amaranth:400,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="container" class="container-fluid">
	
  <%= render 'layouts/header'%>
  <div class="alert alert-success span12" style="display: none;"><%= notice %></div>
  <div class="alert alert-error span12" style="display: none;"><%= alert %></div>
  	  <% if !current_user.nil? %>
  	  	<%= render 'layouts/sidebar' %>
  	  <% end %>
      <%= yield %>
  	</div>
  </div>
  
  <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"%>
  <%= javascript_include_tag "http://code.jquery.com/ui/1.10.3/jquery-ui.js" %>
  <%= javascript_include_tag "jquery.mousewheel.js" %>
  <%= javascript_include_tag "jquery.jscrollpane.min.js" %>
  <%= javascript_include_tag "scripts.js" %>
</body>
</html>
