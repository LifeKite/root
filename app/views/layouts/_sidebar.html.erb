
<div class="sidebar" style="z-index: 100">
	<a href=<%= edit_user_registration_path %>>
	<div class="profile sidebar-button">
		<div class="active-flag">Profile</div>
	</div>
	</a>
	<a href=<%= new_kite_path %>>
	<div class="add-kite sidebar-button">
		<div class="active-flag">Add Kite</div>
	</div>
	</a>
	<a href=<%= personalIndex_kites_path %>>
	<div class="kites sidebar-button">
		<div class="active-flag">My Kites</div>
	</div>
	</a>
	<a href=<%= mySupportIndex_kites_path %>>
	<div class="groups sidebar-button">
		<div class="active-flag">Member Kites</div>
	</div>
	</a>
	<% if current_user && current_user.Notifications.count > 0 %>
	
		<div class="show-notifications sidebar-button sidebar-nav-button notification">
			<span><%= current_user.Notifications.count %></span>
			<div class="active-flag">Notifications</div>
		</div>
	
	<%end%>
	<a href="">
	<div class="help sidebar-button">
		<div class="active-flag">Help</div>
	</div>
	</a>
</div>
<% if current_user %>
<div class="notification-nav sidebar-detail-section notification hidden">
	<h2>Notifications</h2>
	<%= render partial: "notifications/notification" , collection: current_user.Notifications.order("created_at DESC")%>
</div>
<%end%>
	
