<%= stylesheet_link_tag "styles" %>
<div class="wrapper login has-navigation">
		<div class="content">
			<img class="logo-color" src="/images/logo-color.png" width="190" height="136" alt="Logo Color">
			<h2 class="create-your-account">Update your account</h2>
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
				:html => {:class => "signup-form", :method => :put }) do |f| %>
			  <%= devise_error_messages! %>
			
			  <%= f.email_field :email, :placeholder=>"Email Address" %>
			
			  <%= f.text_field :username, :placeholder=>"Username" %>
			
			  <%= f.password_field :password, :placeholder=>"New Password" %>
			
			  <%= f.password_field :password_confirmation, :placeholder=>"New Password Again" %>
			  
			  <%= f.password_field :current_password, :placeholder=>"Current Password" %>
			
			  <%= f.submit "Update", {:class => "create-button"} %>
			  
				
			<% end %>
			
			<%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete, :class=>"btn btn-danger" %>.</p>
			
			<div style="border: 1px solid black;">
			<h3>Get the LifeKite kite button</h3>
			<p>Drag the Kite button into your browser's bookmark bar then click whenever you want to add
				a kite image from a page</p>
			<a href="javascript:document.body.innerHTML += '<div style=\'border:1px solid black;height:130px;width:300px;position:absolute;top:200px;left:50%;margin:-150px 0 0 -150px;text-align: center;z-index:1000; background: #ffffff url(<%= asset_url 'ajax-loader.gif' %>) no-repeat center center;\'>Please wait while LifeKite scans the page...<br/></div><div style=\'position: fixed; left: 0; top: 0; z-index:999; width:100%; height:100%; background-color: gray; opacity: 0.5; text-align: center;\'></div>';window.location.replace('<%= url_for(:controller => '/kites', :action => 'newFromSource', :only_path => false) %>?path='+window.location);">
				
				<%= image_tag path_to_image('logo-color.png'), :alt => 'Create a Kite', :height => 75, :width => 100 %>
			
			</a>
		</div>
	</div>
<%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"%>
<%= javascript_include_tag "filter.js" %>
<%= javascript_include_tag "footer.js" %>
<%= javascript_include_tag "kite-nav.js" %>

