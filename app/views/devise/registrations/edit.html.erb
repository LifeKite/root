
<div class="wrapper login has-navigation">
		<div class="content">
			<img class="logo-color" src="/images/logo-color.png" width="190" height="136" alt="Logo Color">
			
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
				:html => {:class => "signup-form", :method => :put }) do |f| %>
				
				
				<div class ="userSettingsBlock">
				  <h2 class="create-your-account">Username and Password</h2>
				  <%= devise_error_messages! %>
				
				  <%= f.email_field :email, :placeholder=>"Email Address" %>
				  
				  <%= f.text_field :firstname, :placeholder => "First Name"%>
				  
				  <%= f.text_field :lastname, :placeholder => "Last Name "%>
				
				  <%= f.text_field :username, :placeholder=>"Username" %>
				  <% if !current_user.provider %>
				  <%= f.password_field :password, :placeholder=>"New Password" %>
				
				  <%= f.password_field :password_confirmation, :placeholder=>"New Password Again" %>
				  <span class="explain">(required)</span>
				  <%= f.password_field :current_password, :placeholder=>"Current Password" %>
				  <% end %>
				</div>
			    <div class="userSettingsBlock">
			    	<h2>Options</h2>
					  
					  <%= f.check_box :sendEmailNotifications %>
					  <%= f.label :sendEmailNotification, "Sign up for email notifications" %>
					  <span class='explain'>When a kite you follow is changed or someone comments on
					  	or likes one of your kites you can choose to receive an email notification.</span>
					  
			    </div>
			    
			  	<%= f.submit "Save Changes", {:class => "button uwidth-button"} %>
			  	<%= button_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure you want to permanently delete your account?", :method => :delete, :class=>"button uwidth-button" %>
				<% if current_user.provider != "facebook" %>
				<span><%= button_to "Link to Facebook Account", user_omniauth_authorize_path(:facebook), :class => "button uwidth-button" %></span>
				<% end %>
				
			<% end %>
			
			<br/>
			<div style="border: 1px solid black;">
			<h3>Get the LifeKite kite button</h3>
			<p>Drag the Kite button into your browser's bookmark bar then click whenever you want to add
				a kite image from a page</p>
			<a href="javascript:document.body.innerHTML += '<div style=\'border:1px solid black;height:130px;width:300px;position:absolute;top:200px;left:50%;margin:-150px 0 0 -150px;text-align: center;z-index:1000; background: #ffffff url(<%= asset_url '/images/ajax-loader.gif' %>) no-repeat center center;\'>Please wait while LifeKite scans the page...<br/></div><div style=\'position: fixed; left: 0; top: 0; z-index:999; width:100%; height:100%; background-color: gray; opacity: 0.5; text-align: center;\'></div>';$(window).scrollTop(0);window.location.replace('<%= url_for(:controller => '/kites', :action => 'newFromSource', :only_path => false) %>?path='+window.location);">
				
				<%= image_tag path_to_image('/images/logo-color.png'), :alt => 'Create a Kite', :height => 75, :width => 100 %>
			
			</a>
		</div>
	</div>