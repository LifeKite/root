html, body {
    min-height: 100%;
    height: auto !important;
    height: 100%;
}

body {

    color: #333;
    padding: 0;
}

body * {

}

h1, h2, h3, h4, h5, h6 {
    font-family: "Trebuchet MS", Trebuchet, Tahoma, Verdana, Arial, sans-serif;
    color:#44878E;
    clear: both;
}

h1 {
	color: wheat;
}

h2 {
    color: #c8c8c8;
		margin-top: -25px;
}

h3 {
}

h4 {
    color: #333;
    margin-bottom: -10px;
}


ul, ol {
    margin-left 0;
}

ul ul {
    margin-bottom: 20px;
}

#wrap {
    color: #404040;
    /*margin: 0 12%;*/
    margin: 20px 40px;
}

a {
    color: #44878E;
}

table {
    font-size: inherit;
    border: 1px solid #c8c8c8;
}

th {
    background: #d8d8d8;
    text-align: left;
    padding: 5px;
    white-space: nowrap;
}

td {
    background: #f8f8f8;
    text-align: left;
    padding: 5px;
    vertical-align: top;
}

select, input, textarea {
    font: 99% "Trebuchet MS", Trebuchet, Tahoma, Verdana, Arial, sans-serif;
}

pre, code, tt, dt {
    font: 100% monospace;
    margin: 20px 0;
}

pre, blockquote {
    padding: 15px;
    background-color: #f0f0f0;
    margin: 20px 0;
    -moz-border-radius: 10px;
}

td pre {
    font: 85% monospace;
    padding: 5px;
    margin: 5px 0;
}

.LockOff {
     display: none;
     visibility: hidden;
  }

  .LockOn {
     display: block;
     visibility: visible;
     position: absolute;
     z-index: 999;
     top: 0px;
     left: 0px;
     width: 105%;
     height: 105%;
     background: #CCCCCC url('/images/ajax-loader.gif') no-repeat center;
     text-align: center;
     padding-top: 20%;
     filter: alpha(opacity=75);
     opacity: 0.75;
  }

.comment-field {
	width: 90%;
}

.hidden {
    display: none;
}
