<!DOCTYPE html>
<html>
<head>
  <title>Rlifekite</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "bootstrap.min.js" %>
  <%= javascript_include_tag "jquery-ui.js" %>
  <%= javascript_include_tag "jquery.jcarousel.min.js" %>
  <%= javascript_include_tag "bootstrap-alert.js" %>
  <%= javascript_include_tag "jquery.ui.widget.js" %>
  <%= javascript_include_tag "jquery.iframe-transport.js" %>
  <%= javascript_include_tag "jquery.fileupload.js" %>
  <link href='http://fonts.googleapis.com/css?family=Sofadi+One' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="container" class="container-fluid">
	
  <div id="header" class="row-fluid">
  	<div id="Logo" class="span2" style="padding-left: 10px;">
  		<%= image_tag 'LK3.png', { :height => 40, :width => 40, :style => "vertical-align: top;"} %>
  		<h1 style="display: inline;">LifeKite</h1>
  		<br/>Picture your goals
  	</div>
  	
	  
  	<%if current_user %>
  		
  		<div class="btn-group pull-right" style="padding-right: 10px;">
	    
	    	<a class="btn dropdown-toggle" href="#" data-toggle="dropdown">
	    		<i class="icon-user"></i>
	    		<%=h current_user.username %>
	    		<span class="caret"></span>
	    	</a>
	    	<ul class="dropdown-menu">
	    		<li><%= link_to 'User Settings', edit_user_path(current_user) %></li>
	    		<li><%= link_to 'Edit my account', edit_user_registration_path %></li>
	    		<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
	    	</ul> 
	    	</div>
	    	<div class = "pull-right">
	    		<i class="icon-white icon-home"></i><%= link_to ' Home', current_user, { :style => "margin-right: 50px;"} %>
	    	</div>
    	</div>
    <% end %>  
	
	
  <div class="alert alert-success span12" style="display: none;"><%= notice %></div>
  <div class="alert alert-error span12" style="display: none;"><%= alert %></div>
  <div id="mbody" class="row-fluid">
		<%= yield %>
  </div>
  <div id="footer" class="row-fluid">
  	<div class="span11">
  	<ul>
  		<a href="#homeModal" style="color:white;" role="button" data-toggle="modal">About</a>
  	<ul>
  	</div>
  </div>
</div>
<%= render :partial => home_path('about') %>
</body>
</html>
